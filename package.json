{
  "name": "angular-runtime-xray",
  "displayName": "Angular Runtime X-Ray",
  "description": "Real-time performance monitoring and visualization for Angular applications with AI-powered optimization suggestions",
  "version": "0.2.3",
  "publisher": "angular-xray",
  "author": {
    "name": "Angular X-Ray Team",
    "email": "contact@angular-xray.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/erisk405/R-Angular-Runtime-X-Ray.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/erisk405/R-Angular-Runtime-X-Ray.git"
  },
  "bugs": {
    "url": "https://github.com/erisk405/R-Angular-Runtime-X-Ray.git/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "angular",
    "performance",
    "monitoring",
    "visualization",
    "debugging",
    "profiling",
    "optimization",
    "ai",
    "rust",
    "typescript",
    "real-time",
    "flame-graph"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#dd0031",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angularXray.analyzeWithAI",
        "title": "Angular X-Ray: Analyze Performance with AI"
      },
      {
        "command": "angularXray.startCapture",
        "title": "Angular X-Ray: Start Performance Capture"
      },
      {
        "command": "angularXray.stopCapture",
        "title": "Angular X-Ray: Stop Performance Capture"
      },
      {
        "command": "angularXray.showFlameGraph",
        "title": "Angular X-Ray: Show Flame Graph"
      },
      {
        "command": "angularXray.compareSnapshots",
        "title": "Angular X-Ray: Compare Performance Snapshots"
      },
      {
        "command": "angularXray.manageSnapshots",
        "title": "Angular X-Ray: Manage Snapshots"
      },
      {
        "command": "angularXray.setupProbe",
        "title": "Angular X-Ray: Setup Performance Monitoring"
      },
      {
        "command": "angularXray.showStatus",
        "title": "Angular X-Ray: Show Status"
      },
      {
        "command": "angularXray.restartServer",
        "title": "Angular X-Ray: Restart WebSocket Server"
      },
      {
        "command": "angularXray.stopServer",
        "title": "Angular X-Ray: Stop WebSocket Server"
      },
      {
        "command": "angularXray.startServer",
        "title": "Angular X-Ray: Start WebSocket Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "angularXray",
          "title": "Angular X-Ray",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "angularXray": [
        {
          "type": "webview",
          "id": "angularXray.flameGraph",
          "name": "Flame Graph",
          "icon": "$(graph)"
        },
        {
          "type": "webview",
          "id": "angularXray.comparison",
          "name": "Performance Comparison",
          "icon": "$(compare-changes)"
        }
      ]
    },
    "configuration": {
      "title": "Angular X-Ray",
      "properties": {
        "angularXray.websocket.port": {
          "type": "number",
          "default": 3333,
          "minimum": 1024,
          "maximum": 65535,
          "description": "WebSocket server port for Angular X-Ray performance monitoring"
        },
        "angularXray.websocket.autoFindPort": {
          "type": "boolean",
          "default": true,
          "description": "Automatically find an available port if the configured port is in use"
        },
        "angularXray.performance.threshold": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "description": "Performance threshold in milliseconds for CodeLens warnings"
        },
        "angularXray.flameGraph.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh flame graph when capture is active"
        },
        "angularXray.flameGraph.refreshInterval": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 10000,
          "description": "Flame graph auto-refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:rust": "cargo-cp-artifact -nc native/index.node -- cargo build --manifest-path=native/Cargo.toml --message-format=json-render-diagnostics --release",
    "build:rust:debug": "cargo-cp-artifact -nc native/index.node -- cargo build --manifest-path=native/Cargo.toml --message-format=json-render-diagnostics",
    "package": "vsce package"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "cargo-cp-artifact": "^0.1.9",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "napi": {
    "name": "native",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-pc-windows-msvc",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu"
      ]
    }
  }
}
