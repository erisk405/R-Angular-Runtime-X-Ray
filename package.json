{
  "name": "angular-runtime-xray",
  "displayName": "Angular Runtime X-Ray",
  "description": "Real-time performance monitoring and visualization for Angular applications with AI-powered optimization suggestions",
  "version": "0.1.0",
  "publisher": "angular-xray",
  "author": {
    "name": "Angular X-Ray Team",
    "email": "contact@angular-xray.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/angular-xray/angular-runtime-xray",
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-xray/angular-runtime-xray.git"
  },
  "bugs": {
    "url": "https://github.com/angular-xray/angular-runtime-xray/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "angular",
    "performance",
    "monitoring",
    "visualization",
    "debugging",
    "profiling",
    "optimization",
    "ai",
    "rust",
    "typescript",
    "real-time",
    "flame-graph"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#dd0031",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angularXray.analyzeWithAI",
        "title": "Angular X-Ray: Analyze Performance with AI"
      },
      {
        "command": "angularXray.startCapture",
        "title": "Angular X-Ray: Start Performance Capture"
      },
      {
        "command": "angularXray.stopCapture",
        "title": "Angular X-Ray: Stop Performance Capture"
      },
      {
        "command": "angularXray.showFlameGraph",
        "title": "Angular X-Ray: Show Flame Graph"
      },
      {
        "command": "angularXray.compareSnapshots",
        "title": "Angular X-Ray: Compare Performance Snapshots"
      },
      {
        "command": "angularXray.manageSnapshots",
        "title": "Angular X-Ray: Manage Snapshots"
      },
      {
        "command": "angularXray.setupProbe",
        "title": "Angular X-Ray: Setup Performance Monitoring"
      },
      {
        "command": "angularXray.showStatus",
        "title": "Angular X-Ray: Show Status"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "angularXray",
          "title": "Angular X-Ray",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "angularXray": [
        {
          "type": "webview",
          "id": "angularXray.flameGraph",
          "name": "Flame Graph",
          "icon": "$(graph)"
        },
        {
          "type": "webview",
          "id": "angularXray.comparison",
          "name": "Performance Comparison",
          "icon": "$(compare-changes)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:rust": "cargo-cp-artifact -nc native/index.node -- cargo build --manifest-path=native/Cargo.toml --message-format=json-render-diagnostics --release",
    "build:rust:debug": "cargo-cp-artifact -nc native/index.node -- cargo build --manifest-path=native/Cargo.toml --message-format=json-render-diagnostics",
    "package": "vsce package"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "cargo-cp-artifact": "^0.1.9",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "napi": {
    "name": "native",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-pc-windows-msvc",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu"
      ]
    }
  }
}
